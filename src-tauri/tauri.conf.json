{
    "build": {
        "beforeDevCommand": "bun run dev",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../src/dist",
        "devUrl": "http://localhost:1420"
    },
    "bundle": {
        "active": true,
        "targets": ["msi", "appimage", "deb"],
        "windows": {
            "allowDowngrades": true,
            "certificateThumbprint": null,
            "digestAlgorithm": null,
            "nsis": null,
            "timestampUrl": null,
            "tsp": false,
            "wix": {
                "language": ["en-US", "ru-RU"]
            },
            "webviewInstallMode": {
                "silent": true,
                "type": "downloadBootstrapper"
            }
        },
        "resources": ["res/**/*"],
        "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    },
    "productName": "rpgmtranslate",
    "mainBinaryName": "rpgmtranslate",
    "version": "4.0.0",
    "identifier": "com.savannstm.rpgmtranslate",
    "plugins": {},
    "app": {
        "security": {
            "assetProtocol": {
                "scope": ["**"],
                "enable": true
            },
            "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; connect-src ipc: http://ipc.localhost"
        },
        "windows": [
            {
                "title": "RPGMTranslate",
                "url": "main.html",
                "label": "main",
                "maximized": true
            }
        ]
    }
}
